# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/online_music_limited

# Optional: set to production in production deployments
NODE_ENV=development

# Admin UI login (protects /admin/* and /api/admin/*)
ADMIN_USER=admin
ADMIN_PASS=change_me

# Admin session signing secret (generate a long random string)
ADMIN_SESSION_SECRET=change_me_to_a_long_random_secret

# Cloudinary (used by Admin UI to upload category images and track audio)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_FOLDER=online_music_limited
